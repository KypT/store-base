<div class='ui container'>
  <div class = 'order-details'>
    <h1><%= render @order %></h1>
    <table>
      <tr>
        <td>Имя:</td>
        <td> <%= @order.name %> </td>
      </tr>
      <tr>
        <td>Фамилия:</td>
        <td> <%= @order.surname %> </td>
      </tr>
      <tr>
        <td>Телефон:</td>
        <td> <%= @order.phone %> </td>
      </tr>
      <tr>
        <td>Email:</td>
        <td> <%= @order.email %> </td>
      </tr>
      <tr>
        <td>Страна:</td>
        <td> <%= @order.country %> </td>
      </tr>
      <tr>
        <td>Город:</td>
        <td> <%= @order.city %> </td>
      </tr>
      <tr>
        <td>Адрес:</td>
        <td> <%= @order.address %> </td>
      </tr>
      <tr>
        <td>Индекс:</td>
        <td> <%= @order.post_code %> </td>
      </tr>
      <tr>
        <td>Создан:</td>
        <td> <%= @order.created_at %> </td>
      </tr>
    </table>
  </div>

  <div class="order-summary">
    <%= render partial: 'summary', locals: { order: @order } %>
  </div>
</div>
