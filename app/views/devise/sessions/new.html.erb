<%= render partial: '/sub_header', locals: {title: 'Вход' } %>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form center-block'}) do |f| %>
      <h2>Добро пожаловать!</h2>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Войти', class: 'btn btn-lg btn-primary btn-block' %>
      </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
