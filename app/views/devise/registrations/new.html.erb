<%= render partial: '/sub_header', locals: {title: 'Регистрация' } %>

<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login-form center-block'}) do |f| %>
      <h2>Добро пожаловать!</h2>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password,
                             autocomplete: "off",
                             placeholder: ('Пароль (' + @minimum_password_length.to_s  + ' символов минимум)'),
                             class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation,
                             autocomplete: "off",
                             placeholder: 'Подтвердите пароль',
                             class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Зарегистрироваться", class: 'btn btn-lg btn-primary btn-block' %>
      </div>

      <%= render "devise/shared/links" %>
  <% end %>
</div>
