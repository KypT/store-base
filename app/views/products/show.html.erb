<h1>Страница итема</h1>

<h2  <%= editable %> data-url = '<%= product_path @product %>' data-attr = 'name'><%= @product.name %></h2>
<h3  <%= editable %> data-url = '<%= product_path @product %>' data-attr = 'price'><%= @product.price %></h3>
<div <%= editable %> data-url = '<%= product_path @product %>' data-attr = 'tags'><%= tag_string @product %></div>
<div <%= editable %> data-url = '<%= product_path @product %>' data-attr = 'category'> <%= category_for @product %></div>
<%= form_tag '', multipart: true do | f | %>
  <input type="file" name="image">
  <input type="submit"/>
<% end %>
<img src="<%= images_for(@product).first %>" alt=""/>