<div class = 'store-controls'>
  <h2 class = 'store-btn'>Оплата и доставка</h2>
  <div class = 'categories'>
    <h2 class = 'store-btn'>Товары</h2>
    <ul class = 'dropdown tag-buttons'>
      <%= render @tags %>
    </ul>
  </div>
  <div class = 'collections'>
    <h2 class = 'store-btn'>Коллекции</h2>
    <ul class = 'dropdown'>
      <li class = 'collection'>Тотемные звери</li>
      <li class = 'collection'>Зачарованный лес</li>
      <li class = 'collection'>Приятные узоры</li>
      <li class = 'collection'>Вдохновленные природой</li>
      <li class = 'collection'>Крылатая коллекция</li>
    </ul>
  </div>
  <h2 class = 'store-btn'>Акции</h2>
  <h2 class = 'store-btn'>Индивидуальные заказы</h2>
</div>
<div class = 'store-controls store-controls__sub'>
  <ul class = 'tags'>
    <%= render @tags %>
  </ul>
</div>
<div class = 'store-content'>
    <%= image_tag 'arrow-left-active.png', class: 'get-prev' %>
    <div class = 'store-specials'></div>
    <div class = 'ui grid container store-products'></div>
    <%= image_tag 'arrow-right-active.png', class: 'get-next' %>
</div>