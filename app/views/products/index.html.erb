<h1>Store</h1>

<%= render @tags %>

<% @products.each do |product| %>
    <div class = 'product' data-id = <%= product.id %>>
      <%= render product %>
      <%= link_to 'Buy', new_cart_path(id: product.id), remote: true %>
      <%= link_to 'Show', product_path(product) %>
      <%= link_to 'Delete', product_path(product), :method => 'delete' if admin_signed_in? %>
    </div>
<% end %>

<%= link_to 'New', new_product_path if admin_signed_in? %>
