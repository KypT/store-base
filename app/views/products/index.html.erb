<h1>Магазин</h1>

<% @tags.each do | tag | %>
    <a href="?tag=<%= tag.name %>"><%= tag.name %></a>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= "#{product.name} - #{product.price}"%></td>
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= link_to 'Delete', product_path(product), :method => 'delete' if admin_signed_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_product_path if admin_signed_in? %>
