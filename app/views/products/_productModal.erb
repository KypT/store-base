<div class="ui products modal">
  <h2 class='modal-product-name' <%= editable 'name', '#' %> ></h2>
  <div class='modal-product-images'></div>
  <div class='modal-product-description clear'>
    <p <%= editable 'description', '#' %>></p>
    <div class='modal-product-actions no-select'>
      <div class='modal-product-price'>
        <span <%= editable 'price', '#' %> >0</span>
      </div>
      <p class='amount-info'>в наличии: <span class='stock-amount' <%= editable 'stock', '#' %> >0</span></p>
      <div class="amount-control">
        <span data-target = '#modal-counter' class='less-amount'>-</span>
        <span id = 'modal-counter' class='amount-counter'>0</span>
        <span data-target = '#modal-counter' class='more-amount'>+</span>
      </div>
      <%= link_to 'Купить', new_cart_path(id: nil), remote: true, class: 'btn buy-button', data: {target: '#modal-counter'} %>
      <%= link_to 'Заказать', new_cart_path(id: nil), remote: true, class: 'btn order-button', data: {target: '#modal-counter'} %>
    </div>
  </div>
</div>