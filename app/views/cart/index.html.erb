<h1> Cart </h1>

<div class = 'products'>
  <% @items.each do |item| %>
      <div class = 'product' data-id = <%= item.id %>>
        <%= render item %>
        <%= link_to 'Show', product_path(item) %>
        <%= link_to 'Remove', cart_path(item.id), :method => 'delete', remote: true %>
      </div>
  <% end %>
</div>

<%= link_to 'Checkout', checkout_cart_index_path %>